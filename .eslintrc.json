{
  "extends": [
    "next/core-web-vitals",
    "plugin:jest-dom/recommended"
  ],
  "plugins": [
    "import-newlines",
    "jest-dom",
    "testing-library"
  ],
  "overrides": [
    {
      "files": ["**/__tests__/**/*.[jt]s?(x)"],
      "extends": ["plugin:testing-library/react"]
    }
  ],
  "rules": {
    "react/display-name": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "curly": "error",
    "eqeqeq": [
      "error",
      "always"
    ],
    "import-newlines/enforce": [
      "error",
      1
    ],
    "indent": [
      "error",
      "tab"
    ],
    "no-console": "warn",
    "no-multi-spaces": "error",
    "no-unused-vars": "warn",
    "no-var": "error",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": {
          "multiline": true
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 2
        },
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 2
        }
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-const": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ]
  }
}